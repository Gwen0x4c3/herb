/* 分隔栏 */
.divider {
  
}
.flex-row {
  display       : flex;
  flex-direction: row;
  align-items   : center;
}
/* 上方搜索栏 */
.search {
  display: flex;
  padding: 10rpx;
  font-size: 32rpx;
  line-height: 70rpx;
}
.search .search-type {
  display: inline-block;
  width: fit-content;
  height: 70rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: 1rpx dashed lightgray;
  border-radius: 10rpx;
}
.search .search-type text {
  font-size: 32rpx;
  line-height: 70rpx;
  vertical-align: middle;
  display: inline-block;
}
.search .search-type image {
  height: 34rpx;
  width: 34rpx;
  vertical-align: middle;
}
.search .search-keyword {
  display: inline-block;
  position: relative;
  flex: 1;
  height: 70rpx;
  margin: 0 15rpx;
  box-sizing: border-box;
  border: 1rpx solid lightgray;
  border-radius: 10rpx;
  padding: 0 60rpx 0 10rpx; 
}
.search .with-hints {
  border-bottom: 1rpx dashed lightgray;
  border-radius: 10rpx 10rpx 0 0;
}
.search .search-keyword input {
  display: block;
  width: 100%;
  height: 70rpx;
  margin: 0;
  line-height: 70rpx;
  font-size: 32rpx;
}
.search .search-keyword icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 17.5rpx;
  top: 7.5rpx;
}
.search .search-hints {
  position: absolute;
  z-index: 20;
  left: 0rpx;
  top: 69rpx;
  box-sizing: border-box;
  width: 100%;
  border: 1rpx solid lightgray;
  border-top: none;
  border-radius: 0 0 10rpx 10rpx;
}
.search .search-hint {
  height: 40rpx;
  line-height: 40rpx;
  padding: 15rpx 15rpx;
  font-size: 32rpx;
  border-bottom: 1px dotted lightgray;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: white;
}
.search .search-hint:active {
  background-color: lightgray;
}
.search .search-hint:last-of-type {
  border-bottom: none;
}

/* 热搜、搜索历史 */
.search-panel {
  height: calc(100vh - 90rpx);
  background-color: rgb(245, 245, 245);
  padding: 40rpx 20rpx ;
}
.search-panel .title{
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.search-panel .search-hotwords {
  flex-wrap: wrap;
  margin: 40rpx 0;
}
.search-panel .item {
  font-size: 28rpx;
  height: 49rpx;
  line-height: 49rpx;
  padding: 0 26rpx;
  background: rgba(131, 183, 253,0.1);
  border-radius: 31rpx;
  justify-content: center;
  margin-bottom: 24rpx;
  margin-right: 24rpx;
  white-space:pre;
  color: #999;
}
.search-panel .color {
  color: #83B7FD;
}
.search-panel .clear-history {
  color: gray;
  font-size: 30rpx;
}
.search-panel .clear-history:active {
  color: orange
}
.search-panel .search-history {
  display       : flex;
  flex-direction: row;
  align-items   : center;
  flex-wrap: wrap;
  margin: 40rpx 0;
}