page {
  color: rgb(20, 20, 20);
}
.scroll {
  height: calc(100vh - 140rpx);
}
.main {
  width: 94%;
  margin: 10rpx auto;
}
.title {
  margin: 30rpx 0 20rpx;
  font-weight: 550;
  font-size: 40rpx;
}
.content {
  
}
.author-block {
  margin: 20rpx 0;
  position: relative;
}
.author-block image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  vertical-align: top;
}
.author-block .nickname {
  display: inline-block;
  font-size: 36rpx;
  color: black;
  height: 50rpx;
}
.sta {
  height: 40rpx;
  display: flex;
}
.sta .time {
  color: rgb(100, 100, 100);
}
.sta .view {
  position: absolute;
  right: 6rpx;
  bottom: 2rpx;
}
.sta .view image {
  width: 44rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.sta .view text {
  vertical-align: middle;
  font-size: 32rpx;
}
.article-image {
  width: 100%;
}
.article-paragraph {
  margin: 10rpx 0;
}

/* 评论区 */
.comment-block {
  margin-top: 80rpx;
  /* margin-bottom: 140rpx; */
}
.comment-block .header {
  height: 90rpx;
  border-top: 2rpx solid lightgray;
  display: flex;
  justify-content: space-between;
  padding: 0 calc(3vw)
}
.comment-block .header .count {
  line-height: 90rpx;
}
.comment-block .header .sort {
  background-color: lightgray;
  height: 70rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
  border: 2rpx solid lightgray;
  border-radius: 30rpx;
}
.comment-block .header .sort-select {
  display: inline-block;
  height: 66rpx;
  width: 100rpx;
  text-align: center;
  color: rgb(80, 80, 80);
  border-radius: 30rpx;
  line-height: 66rpx;
  transition: .1s;
}
.comment-block .header .sort-select.active {
  background-color: white;
  color: rgb(20, 20, 20)
}
.comments {
  width: 94%;
  margin: 0 auto;
}
.comment {
  padding: 20rpx 0 0;
  /* background-color: pink; */
}
.comment .avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: top;
}
.comment .comment-content {
  display: inline-block;
  width: calc(94vw - 94rpx);
  padding-left: 10rpx;
}
.comment .comment-header {
  /* display: flex;
  justify-content: space-between; */
  height: 84rpx;
}
.comment .comment-header .nickname {
  font-size: 36rpx;
  color: black;
  height: 46rpx;
  line-height: 40rpx;
  display: inline-block;
}
.comment .comment-header .author {
  display: inline-block;
  margin-left: 10rpx;
  padding: 0 4rpx;
  font-size: 26rpx;
  color: white;
  background-color: lightslategrey;
}
.comment .comment-header .info {
  font-size: 28rpx;
  color: gray;
  height: 38rpx;
}
.comment .comment-header .floor {
  margin-right: 10rpx;
}
.comment .comment-body {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid rgb(240, 240, 240);
}
.comment-block .bottom {
  text-align: center;
  background-color: rgb(230, 230, 230);
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(100, 100, 100)
}

.edit-block {
  position: fixed;
  bottom: 0;
  width: 100%;
  min-height: 140rpx;
  background-color: white;
  box-sizing: border-box;
  border-top: 1rpx solid rgb(240, 240, 240);
}
.edit-block.focus {
  padding-bottom: 20rpx;
}
.edit-block .edit-box {
  width: 88%;
  margin: 20rpx auto;
}
.edit-block .textarea {
  display: inline-block;
  width: calc(88vw - 48rpx);
  height: 60rpx;
  padding: 0 24rpx;
  background-color: rgb(244, 243, 244);
  border-radius: 28rpx;
}
.edit-block textarea.focus {
  width: calc(88vw - 188rpx);
  height: 140rpx;
}
.edit-block button {
  /* display: inline-block; */
  display: none;
  width: 120rpx!important;
  margin: 0 0rpx 0 20rpx!important;
  padding: 10rpx 20rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: white;
  background-color: blue;
}
.edit-block button[disabled] {
  color: white!important;
  background-color: lightsteelblue!important;
}